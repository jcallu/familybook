        coffee:
          $(document).ready ->
            $(".search").keyup ->
              str = $(".search").val()
              $(".families .box-display").each (index) ->
                if $(this).attr("id")
                  unless $(this).attr("id").match(new RegExp(str, "i"))
                    $(this).fadeOut "fast"
                  else
                    $(this).fadeIn "slow"
                return
              return
            return
